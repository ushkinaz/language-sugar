<project name="baseLang-sugar-default" default="main">
  <property file="${ant.file}/../baseLang-sugar.properties" />
  <import file="${ant.file}/../baseLang-sugar-compile.xml" />
  <import file="${ant.file}/../baseLang-sugar-languages.xml" />
  <target name="main" depends="compile,clean.before,folders.create,do.the.job,clean.after" />
  <target name="compile">
    <antcall target="compile.all" />
  </target>
  <target name="clean.before" depends="compile">
    <delete dir="${deploy.dir}" />
    <tstamp />
  </target>
  <target name="folders.create" depends="clean.before">
    <mkdir dir="${deploy.dir}" />
    <mkdir dir="${deploy.dir}/baseLang-sugar.zip.tmp/baseLang-sugar" />
    <mkdir dir="${deploy.dir}/baseLang-sugar.zip.tmp" />
  </target>
  <target name="do.the.job" depends="folders.create">
    <antcall target="baseLang-sugar-languages.pack.baseLanguage.sugar" />
    <mkdir dir="${deploy.dir}/baseLang-sugar.zip.tmp/baseLang-sugar" />
    <zip destfile="${deploy.dir}/baseLang-sugar.zip" duplicate="preserve" filesonly="true">
      <zipfileset dir="${deploy.dir}/baseLang-sugar.zip.tmp" />
    </zip>
    <delete dir="${deploy.dir}/baseLang-sugar.zip.tmp" />
  </target>
  <target name="clean.after" depends="do.the.job">
    <delete dir="${deploy.dir}/baseLang-sugar.zip.tmp" />
  </target>
</project>
